<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registrazione">


    <EditText
        android:id="@+id/etxt_conferma_email"
        android:layout_width="172dp"
        android:layout_height="50dp"
        android:autofillHints=""
        android:inputType="textEmailAddress"
        android:text="@string/conferma_email"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxt_username"
        app:layout_constraintVertical_bias="0.319" />

    <EditText
        android:id="@+id/etxt_password"
        android:layout_width="172dp"
        android:layout_height="50dp"
        android:autofillHints=""
        android:inputType="textPassword"
        android:text="@string/password"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxt_email"
        app:layout_constraintVertical_bias="0.236"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/etxt_email"
        android:layout_width="172dp"
        android:layout_height="54dp"
        android:autofillHints=""
        android:inputType="textEmailAddress"
        android:text="@string/email"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxt_username"
        app:layout_constraintVertical_bias="0.061" />

    <EditText
        android:id="@+id/etxt_conferma_password"
        android:layout_width="172dp"
        android:layout_height="50dp"
        android:autofillHints=""
        android:inputType="textPassword"
        android:text="@string/password"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxt_password"
        app:layout_constraintVertical_bias="0.13" />

    <EditText
        android:id="@+id/etxt_username"
        android:layout_width="173dp"
        android:layout_height="55dp"
        android:autofillHints=""
        android:inputType="textEmailAddress"
        android:text="@string/utente"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.375" />

    <Button
        android:id="@+id/button"
        android:layout_width="164dp"
        android:layout_height="58dp"
        android:onClick="doRegistrazione"
        android:text="@string/accedi"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.864"
        tools:text="Registrati" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="261dp"
        android:layout_height="102dp"
        android:contentDescription="@string/logo"
        app:layout_constraintBottom_toTopOf="@+id/etxt_username"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logoscritta" />

    <TextView
        android:id="@+id/editTextTextPersonName"
        android:layout_width="203dp"
        android:layout_height="65dp"
        android:ems="10"
        android:onClick="open_activity_login"
        android:text="@string/non_hai_un_account"
        android:textAlignment="center"
        android:textColor="#1976D2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button" />

</androidx.constraintlayout.widget.ConstraintLayout>